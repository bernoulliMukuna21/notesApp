{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
  "ts-node": {
      "esm": true
  },
  "include": ["src/**/*", "setupTests.ts"],
  "exclude": ["node_modules"]
}